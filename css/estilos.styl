background = #2BA8F7
blanco = #fff
color = #606060

-moz-::selection
  background #E0E0E0
  color blanco

::selection
  background #E0E0E0
  color blanco

/* FIN DE COLORES */

@font-face {
  font-family: 'icomoon';
  src:url('../fonts/icomoon.eot?3fhvt6');
  src:url('../fonts/icomoon.eot?#iefix3fhvt6') format('embedded-opentype'),
  url('../fonts/icomoon.woff?3fhvt6') format('woff'),
  url('../fonts/icomoon.ttf?3fhvt6') format('truetype'),
  url('../fonts/icomoon.svg?3fhvt6#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  font-family: 'icomoon';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-check:before {
  content: "\f03a";
  color #7DE85E
  font-size 1.15em
}
.icon-mark-github:before {
  content: "\f00a";
  font-size 2em
}
.icon-quill:before {
  content: "\e907";
  font-size 3em
}

a
  color #000
  text-decoration none

a:hover, a:focus
  color #000
  text-decoration none

body
  color color
  font-family: 'Roboto', sans-serif;
  font-size 16px
  margin 0
  padding 0

footer
  background background
  color blanco
  height 170px
  overflow hidden

form
  background #424242
  color blanco
  margin 2em auto
  max-width 600px
  padding 2em

li
  list-style none

nav
  padding-top 0
  margin-top 0

ul
  padding 0


/* FIN DE TAGS HTML */


.article-webs
  text-align center

.avatar
  border 2px solid blanco
  border-radius 100%
  height 180px
  width  180px

.avatar:hover
  transition .7s linear
  transform rotateY(360deg)

.avatar, .textos-header
  display inline-block
  margin-top 1em
  vertical-align middle

.blanco
  color blanco

.blog
  color blanco

.contador
 color blanco

.conocimientos
  background-color blanco
  border-top 5px solid background
  margin  3em 0
  padding 1em
  width 18%

.cursos
  background #ACF0FF
  display flex
  justify-content center
  margin-top 2em

.font-light
  font-weight 300

.footer-subHeader
  margin-bottom 2em
  text-align center
  color blanco

.habilidades
  background #ACF0FF
  display flex
  justify-content center

.header
  background background
  color blanco
  height 220px
  text-align center

.header-article-webs
  margin-top 2em

.header-educacion
  text-align center
  padding-bottom 1.5em

.header-footer
  padding-top 1.8em
  text-align center

.header-footer:after
  content " -"

.header-footer:before
  content "- "

.header-habilidades
  border-bottom 1px solid darkgrey
  font-weight 400

.header-yo:before
  content "{ "
  color #ffcb1f
  font-size 1.1em

.header-yo:after
  content " }"
  color #ffcb1f
  font-size 1.1em

.input
  border none
  border-radius 6px
  display inline-block
  height 50px
  font-family 'Roboto'
  font-size 1.2em
  margin-top 1.5em
  outline 0
  width 90%

.email
  display none

.juegos
  background #ffcb1f
  border-bottom 3px solid darkslategrey
  border-radius 5px
  color #000000
  font-size 18px
  margin 1em auto
  padding .5em
  max-width 150px

.lista
  cursor pointer
  display inline-block
  text-align center
  word-spacing 3em
  width 100%

.lista-itemUno
  padding-right 9em

.lista-menu
  display inline-block
  width auto

.mensaje
  border none
  border-radius 6px
  font-family 'Roboto'
  font-size 1.2em
  margin-top 1.5em
  outline 0
  width 90%

.menu-fijo
  background background
  color      #fff
  height     40px
  margin     0 auto
  padding    0
  position   fixed
  text-align center
  top        0
  width      100%
  z-index    9999

.menu-fijo > .lista-menu
  color blanco

.nav
  background blanco
  margin 0
  padding 0
  width 100%

.parrafo-none
  display none

.header-plugin
  margin-top 2em

.range
  width 75%

.redes
  text-align center

.submit
  border none
  border-radius 6px
  cursor pointer
  height 30px
  font-size 18px
  font-family 'Roboto'
  outline 0
  background blanco

.text-habilidades
  border-radius 6px
  background #E0E0E0
  color blanco
  cursor pointer
  display inline-block
  margin .2em .1em
  padding .4em

.textos-header
  width 50%
  text-align left
  padding-left 2em

.trabajo
  background-color blanco
  border-top 5px solid background
  margin  3em 3em
  padding 1em
  width 18%

.que-hice
  margin-top 2em
  text-align center

.web
  border 1px solid #a9a9a9
  box-shadow 3px 3px 3px #a9a9a9
  height 250px
  width 400px

@media screen and (max-width: 1600px)
  .conocimientos, .trabajo
    width 32%


@media screen and (max-width: 1400px)
  .conocimientos, .trabajo
    width 32%

@media screen and (max-width: 988px)
  .header
    height auto

@media screen and (max-width: 890px)
  .habilidades
    flex-wrap wrap

  .cursos
    flex-wrap wrap

  .conocimientos
    width 90%

  .trabajo
    width 90%
    margin 0 0 2em 0

  .header
    height auto

  .lista
    word-spacing 2em

  .lista-itemUno
    padding-right 0

@media screen and (max-width: 660px)
  .lista
    font-size .9em
    word-spacing .4em

  .textos-header
    display block
    width 90%
    margin 0 auto
    padding 0
    text-align center

@media screen and (max-width: 555px)
  .lista
    word-spacing .1em

@media screen and (max-width: 490px)
  form
    margin-bottom 0

  .conocimientos
    width 88%

  .header
    height 490px

  .input
    width 86%

  .lista
    font-size .9em
    margin 0
    padding 0

  .mensaje
    width 86%

  .nav
    height 25px

  .trabajo
    width 88%
    margin 0 0 2em 0

  .textos-header
    padding-bottom .3em

  .web
    width 93%
    height 130px

@media screen and (max-width: 355px)
  .header
    height 550px

  .last-juegos
    display block